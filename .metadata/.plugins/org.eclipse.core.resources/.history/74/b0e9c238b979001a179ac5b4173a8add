public class Test {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("enter no::");
		int x=sc.nextInt();
		int y=x;int z,a=0;
		while(y!=0) {
			y=y/10;
			z=y%10;
			a=a+z*10;
		}
		if(x==a) {
			
			System.out.println("enter no: is palindrom");
		}
		else {
			System.out.println("enter no. is not palindrom");
		}
		System.out.println("x::"+x+"  a::"+a);
	}
}


